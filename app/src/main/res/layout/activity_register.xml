<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerActivity">

    <EditText
        android:id="@+id/RtextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        />


    <EditText
        android:id="@+id/RtextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RtextUsername"
        android:layout_marginTop="50dp"
        android:hint="Password"
        android:textSize="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RtextcnfPassword"
        android:hint="Confirm Password"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/RtextPassword"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign up"
        android:id="@+id/Rbtnsignup"
        android:layout_below="@+id/RtextcnfPassword"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign in"
        android:id="@+id/Rbtnlogin"
        android:layout_below="@+id/RtextcnfPassword"
        android:layout_marginLeft="200dp"
        />











</RelativeLayout>